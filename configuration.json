{
    "language": "en",
    "usePrecompiledViews": "true",
    "usePrecompiledGrammarsOnly": "true",
    "grammarCompiler": "jscc",
    
    
    "maryTextToSpeech": {
    	"serverBasePath": "http://mary.dfki.de:59125/"
    },
    
    "mediaManager": {
    	"plugins": {
    		"browser": ["html5AudioOutput.js",
    		            {"mod": "webAudioInput", "config": "webasrGoogleImpl"},
    		            {"mod": "webAudioTextToSpeech.js", "config": "webttsNuanceImpl"}
    		],
    		"cordova": ["cordovaAudioOutput.js",
    		            "androidAudioInput.js",
    		            "androidTextToSpeech.js"
    		]
    	}
    },
    
    "webAudioInput": {
	    "default": "googleasrImpl"
    },
    
    "html5AudioInput": {
		"silenceBuffer": "2000000",
	    "webSocketAddress": "ws://localhost:9999",
	    "soundPackageSize": "4096"
    },
    
    "nuanceWebAudioInput": {
	    "encoder": "amrEncoder.js",
	    "appKey": "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx",
	    "appId": "NMDPTRIAL_xxxxxx111111111111111111111"
    },
    
    "googleWebAudioInput": {
	    "encoder": "flacEncoder.js",
	    "appKey": "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
    },
    
    "atntWebAudioInput": {
	    "encoder": "amrEncoder.js",
	    "appKey": "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx",
	    "appSecret": "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx",
	    "_auth__comment": "Get app authentification data (key, secret) for oAuth from <https://matrix.bf.sl.attcompute.com/>"
    },
    
    "nuanceHttpTextToSpeech": {
    	"serverBasePath": "https://tts.nuancemobility.net:443/NMDPTTSCmdServlet/tts",
    	"appId": "NMDPTRIAL_xxxxxx111111111111111111111",
    	"appKey": "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
    },
    
    "silenceDetector": {
    	"noiseTreshold": "0.1",
	    "pauseCount": "3",
	    "minimalSpeachCount": "3",
	    "resetCount": "15"
	}
}